<div class="container">
  <div class="page-header">
    <h1 id="timeline"><%= @thread.title %></h1>
  </div>

  <%= link("New post", to: thread_post_path(@conn, :new, @thread), class: "btn btn-success") %>
  <ul class="timeline">
  <%= for post <- @posts do %>
      <li>
        <div class="timeline-badge"><i class="glyphicon glyphicon-check"></i></div>
        <div class="timeline-panel">
          <div class="timeline-heading">
            <h4 class="timeline-title"> <%= profile_icon(@user) %> <%= post.user.first_name %> </h4>
            <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= format_time_standard(post.inserted_at) %></small></p>
          </div>
          <div class="timeline-body">
            <p>
              <%= post.message %>
            </p>
          </div>
          <div class="timeline-floor">
                <%= link("Edit", to: thread_post_path(@conn, :edit, @thread, post), class: "btn-sm btn-primary") %>
                <%= link("Destroy", to: thread_post_path(@conn, :delete, @thread, post), method: :delete, class: "btn-sm btn-danger") %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
